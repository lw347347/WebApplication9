@model IEnumerable<WebApplication9.MissionQuestion>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Post a New Question", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mission.MissionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserEmail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Answer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mission.MissionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserEmail)
        </td>
        <td>
            @Html.ActionLink("Post an Answer", "Edit", new { id=item.MissionQuestionID })
        </td>
    </tr>
}

</table>
